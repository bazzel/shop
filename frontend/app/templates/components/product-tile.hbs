<div class="col-sm-4 col-lg-4 col-md-4">
  <div class="thumbnail">
    <img {{bindAttr src=product.imageUrl}} alt="">
    <div class="caption">
      <h4 class="pull-right">${{product.amount}}</h4>
      <h4><a href="#">{{product.title}}</a>
      </h4>
      <p>{{product.description}}</p>
    </div>
    <div class="ratings">
      <p class="pull-right">{{product.reviewCount}} reviews</p>
      <p>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
        <span class="glyphicon glyphicon-star"></span>
      </p>
    </div>
  </div>
</div>
